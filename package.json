{
  "name": "gff-nostream",
  "version": "1.3.9",
  "description": "utilities to read GFF3 data",
  "license": "MIT",
  "repository": "cmdcolin/gff-nostream",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "author": {
    "name": "Colin Diesh",
    "email": "colin.diesh@gmail.com",
    "url": "https://github.com/cmdcolin"
  },
  "files": [
    "dist",
    "esm",
    "src"
  ],
  "scripts": {
    "test": "vitest",
    "clean": "rimraf dist esm",
    "lint": "eslint src test",
    "docs": "documentation readme src/api.ts --section=API  --shallow && yarn format",
    "format": "prettier --write .",
    "prebuild": "yarn clean",
    "build:esm": "tsc --target es2018 --outDir esm",
    "build:es5": "tsc --target es2015 --module commonjs --outDir dist",
    "postbuild:es5": "echo '{\"type\": \"commonjs\"}' > dist/package.json",
    "build": "yarn build:es5 && yarn build:esm",
    "prepublishOnly": "yarn test --run && yarn build",
    "postversion": "git push --follow-tags"
  },
  "keywords": [
    "bionode",
    "biojs",
    "gff3",
    "gff",
    "genomics"
  ],
  "devDependencies": {
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vitest/coverage-v8": "^3.0.1",
    "documentation": "^14.0.1",
    "eslint": "^9.9.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vitest": "^3.0.1"
  }
}
